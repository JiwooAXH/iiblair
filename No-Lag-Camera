local Players = game:GetService("Players")

local function checkPlayerCamera(character)
    local function removeGui()
        local camera = character:FindFirstChild("Photo Camera")
        if camera then
            local gui = camera:FindFirstChild("PictureGui")
            if gui then
                gui:Destroy()
            end
        end
    end

    -- Initial check when the character spawns
    removeGui()

    -- Detect if the Photo Camera is added later
    character.ChildAdded:Connect(removeGui)
    character.ChildRemoved:Connect(removeGui)
end

Players.PlayerAdded:Connect(function(player)
    -- When a player spawns, check their character
    player.CharacterAdded:Connect(function(character)
        checkPlayerCamera(character)
    end)

    -- If the player already has a character when the script runs
    if player.Character then
        checkPlayerCamera(player.Character)
    end
end)
