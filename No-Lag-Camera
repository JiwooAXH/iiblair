local Players = game:GetService("Players")

local function checkPlayerCamera(player)
    local function removeGui()
        local camera = player:FindFirstChild("Photo Camera")
        if camera then
            local gui = camera:FindFirstChild("PictureGui")
            if gui then
                gui:Destroy()
            end
        end
    end

    -- Initial check
    removeGui()

    -- Detect changes in player's items
    player.ChildAdded:Connect(removeGui)
    player.ChildRemoved:Connect(removeGui)
end

Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(character)
        checkPlayerCamera(character)
    end)
end)

-- Run for existing players
for _, player in ipairs(Players:GetPlayers()) do
    if player.Character then
        checkPlayerCamera(player.Character)
    end
end
